---
const { name, logo, text, background } = Astro.props;
import arrow from "../assets/arrowUpRight.svg";
---

<div
  data-animate
  class="relative group cursor-pointer z-10 flex flex-col justify-between rounded-2xl overflow-hidden"
>
  <img class="absolute -z-10 w-full h-full top-0 left-0" src={background} />

  <div class="flex px-6 pt-6 pb-10 flex-col gap-3">
    <div>
      <img class="h-10" src={logo} />
    </div>

    <p>{text}</p>
  </div>

  <div
    class="bg-white items-center font-medium justify-center flex gap-1.5 px-2 py-[14px] text-black"
  >
    Join on {name}
    <img class="group-hover:rotate-45 size-4 transition" src={arrow.src} />
  </div>
</div>
