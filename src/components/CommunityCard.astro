---
const { name, logo, text, background } = Astro.props;
---

<div
  class="relative cursor-pointer flex flex-col justify-between rounded-2xl overflow-hidden"
>
  <img class="absolute -z-10 w-full h-full top-0 left-0" src={background} />

  <div class="flex px-6 pt-6 pb-10 flex-col gap-3">
    <div>
      <img src={logo} />
    </div>

    <p>{text}</p>
  </div>

  <div
    class="bg-white group justify-center flex gap-1 px-2 py-[14px] text-black"
  >
    Join on {name}
    <img
      class="group-hover:rotate-45 transition"
      src="/images/arrowUpRight.svg"
    />
  </div>
</div>
