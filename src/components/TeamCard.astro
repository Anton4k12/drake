---
const { img, name, position } = Astro.props;
---

<div class="flex flex-col gap-5">
  <div class="flex justify-center">
    <img class="lg:size-[180px] size-[99px]" src={img} />
  </div>

  <div class="flex flex-col gap-[18px] items-center">
    <div class="flex flex-col gap-3 justify-center items-center">
      <h1 class="lg:text-[32px] text-xl uppercase font-black italic">{name}</h1>

      <div class="bg-white/10">
        <p class="p-2 text-xs lg:text-base">{position}</p>
      </div>
    </div>

    <div>
      <img class="cursor-pointer" src="/images/xlogo.svg" />
    </div>
  </div>
</div>
