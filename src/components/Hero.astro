    style={{
      animation: "orbit7 8s linear infinite",
      transformOrigin: "32px 32px",
      animationDelay: "-6s",
    }}
  >
    <img src="/images/gamehero.svg" />
  </div>

  <div
    class="absolute w-11 h-11 rounded-full"
    style={{
      animation: "orbit8 8s linear infinite",
      transformOrigin: "32px 32px",
      animationDelay: "-6s",
    }}
  >
    <img src="/images/twitchhero.svg" />
  </div>

  <img class="z-10 size-[190px]" src="/images/animationherosquare.png" />

  <!-- <img class="z-10" src="/images/herosquare.svg" /> -->

