<script>
  import { animate, inView } from "motion";

  inView("[data-h1]", (element) => {
    animate(
      element,
      { opacity: [0, 1], y: [100, 0] },
      { duration: 1.3, type: "spring", bounce: 0.1 },
    );
  });

  inView("[data-p]", (element) => {
    animate(
      element,
      { opacity: [0, 1], y: [100, 0] },
      { duration: 1.3, type: "spring", bounce: 0.1, delay: 0.2 },
    );
  });

  inView("[data-button]", (element) => {
    animate(
      element,
      { opacity: [0, 1], y: [100, 0] },
      { duration: 1.3, type: "spring", bounce: 0.1, delay: 0.4 },
    );
  });
</script>
