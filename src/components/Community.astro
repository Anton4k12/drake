---
import CommunityCard from "./CommunityCard.astro";
---

<div class="text-white py-20 px-10">
  <div class="flex border border-[#B2C0F2] rounded-[40px] h-full">
    <div class="flex items-center">
      <img class="max-w-[400px] h-[550px]" src="/images/communityimg.png" />
    </div>

    <div class="py-[50px] flex flex-col gap-12 pr-20">
      <div class="flex flex-col gap-4">
        <h1 class="uppercase text-[56px] text-[#889CDF] font-black">
          join our community
        </h1>

        <p class="text-text-color">
          More than <span class="text-white">100,000</span> people are helping us
          build the network.
        </p>
      </div>

      <div class="grid grid-cols-3 gap-4">
        <CommunityCard
          text="Join the conversation and earn XP just for being part of our Discord Community."
          name="Discord"
          logo="/images/communitycardimg.svg"
          background="/images/testimg.png"
        />

        <CommunityCard
          text="Get the latest updates and chat with the team on Telegram"
          name="Telegram"
          logo="/images/communitycardimg2.svg"
          background="/images/testimg2.png"
        />

        <CommunityCard
          text="Never miss an update, sneak peek, or partnership collab on X.com"
          name="X.com"
          logo="/images/communitycardimg3.svg"
          background="/images/testimg3.png"
        />
      </div>
    </div>
  </div>
</div>
