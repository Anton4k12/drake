---
import CommunityCard from "./CommunityCard.astro";
---

<div class="text-white py-20 px-5 lg:px-10">
  <div
    class="bg-gradient-to-b relative p-1 rounded-[44px] from-[#889CDF] to-[#303753]"
  >
    <img
      class="absolute size-20 hidden lg:block rotate-[20deg] z-10 -top-5 -right-5"
      src="/images/communityborderimg.png"
    />

    <div class="flex bg-black px-4 rounded-[40px] h-full">
      <div class="lg:flex items-center hidden">
        <img
          class="absolute -left-32 w-[600px] hue-rotate-[150deg]"
          src="/images/communityimg.png"
        />
      </div>

      <div
        class="lg:py-[50px] py-10 lg:pl-[350px] flex flex-col gap-12 lg:pr-20"
      >
        <div class="flex flex-col text-center gap-4">
          <h1
            class="uppercase lg:text-[56px] leading-[1.2] text-[32px] text-[#859eee] font-black"
          >
            join our community
          </h1>

          <p class="text-text-color">
            More than <span class="text-white">100,000</span> people are helping
            us build the network.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 grid-cols-1 gap-8 lg:gap-4">
          <CommunityCard
            text="Join the conversation and earn XP just for being part of our Discord Community."
            name="Discord"
            logo="/images/communitycardimg.svg"
            background="/images/testimg.png"
          />

          <CommunityCard
            text="Get the latest updates and chat with the team on Telegram"
            name="Telegram"
            logo="/images/communitycardimg2.svg"
            background="/images/testimg2.png"
          />

          <CommunityCard
            text="Never miss an update, sneak peek, or partnership collab on X.com"
            name="X.com"
            logo="/images/communitycardimg3.svg"
            background="/images/testimg3.png"
          />
        </div>
      </div>
    </div>
  </div>
</div>
